<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--    android:background="#208A8A8A"-->

        <ImageView
            android:id="@+id/exo_playback_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="28dp"
            android:contentDescription="@string/exo_controls_playback_speed"
            android:src="@drawable/exo_ic_speed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/exo_track_selection_view"
            app:tint="@color/white">

        </ImageView>

        <include layout="@layout/swipe_zoom_design" />

        <!--<ImageView
            android:id="@+id/exoplayer_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="28dp"
            android:src="@drawable/ic_baseline_aspect_ratio_24"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/exo_playback_speed"
            android:alpha="0"
            app:tint="@color/white"/>-->

        <ImageView
            android:id="@+id/exoplayer_resizeMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="28dp"
            android:clickable="false"
            android:contentDescription="@string/resize"
            android:src="@drawable/ic_baseline_aspect_ratio_24"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/exo_playback_speed"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/exoplayer_resize1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="28dp"
            android:contentDescription="@string/resize"
            android:elevation="1dp"
            android:src="@drawable/ic_baseline_aspect_ratio_24"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/exo_playback_speed"
            app:tint="@color/white">

        </ImageView>

        <RelativeLayout
            android:id="@+id/cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/fullround_card"
            android:backgroundTint="@color/mode_transparent_capsule"
            app:layout_constraintEnd_toStartOf="@+id/lock"
            app:layout_constraintStart_toEndOf="@+id/backExo"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/titleMoviePlayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="@string/video_title"
                android:textColor="@color/white"
                android:textSize="18sp" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/backExo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="18dp"
            android:contentDescription="@string/back"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white">

        </ImageView>

        <ImageView
            android:id="@+id/exoplayer_resize2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="35dp"
            android:contentDescription="@string/resize"
            android:elevation="1dp"
            android:src="@drawable/ic_baseline_aspect_ratio_24"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/exo_playback_speed"
            app:tint="@color/white">

        </ImageView>

        <ImageView
            android:id="@+id/exoplayer_resize3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="35dp"
            android:contentDescription="@string/resize"
            android:elevation="1dp"
            android:src="@drawable/ic_baseline_aspect_ratio_24"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/exo_playback_speed"
            app:tint="@color/white">

        </ImageView>

        <ImageView
            android:id="@+id/exoplayer_resize4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="35dp"
            android:contentDescription="@string/resize"
            android:elevation="1dp"
            android:src="@drawable/ic_baseline_aspect_ratio_24"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/exo_playback_speed"
            app:tint="@color/white">

        </ImageView>

        <ImageView
            android:id="@+id/exoplayer_resize5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="35dp"
            android:contentDescription="@string/resize"
            android:elevation="1dp"
            android:src="@drawable/ic_baseline_aspect_ratio_24"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/exo_playback_speed"
            app:tint="@color/white">

        </ImageView>

        <ImageView
            android:id="@+id/exo_track_selection_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="44dp"
            android:layout_marginBottom="28dp"
            android:contentDescription="@string/exo_track_selection_auto"
            android:src="@drawable/exo_ic_settings"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/white">

        </ImageView>

        <TextView
            android:id="@+id/qualityTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/qty"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@+id/exo_track_selection_view"
            app:layout_constraintStart_toStartOf="@+id/exo_track_selection_view"
            app:layout_constraintTop_toBottomOf="@+id/exo_track_selection_view"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/speedTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_1_0x"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@+id/exo_playback_speed"
            app:layout_constraintStart_toStartOf="@+id/exo_playback_speed"
            app:layout_constraintTop_toBottomOf="@+id/exo_playback_speed"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/screenSizeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fit"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@+id/exoplayer_resizeMain"
            app:layout_constraintStart_toStartOf="@+id/exoplayer_resizeMain"
            app:layout_constraintTop_toBottomOf="@+id/exoplayer_resizeMain"
            tools:ignore="SmallSp" />

        <ImageView
            android:id="@+id/picture_in_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="45dp"
            android:layout_marginBottom="28dp"
            android:contentDescription="@string/PIP"
            android:src="@drawable/ic_round_picture_in_picture_alt_24"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/pipTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/PIP"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/picture_in_picture"
            app:layout_constraintStart_toStartOf="@+id/picture_in_picture"
            app:layout_constraintTop_toBottomOf="@+id/picture_in_picture"
            tools:ignore="SmallSp" />

        <ImageView
            android:id="@+id/exo_play"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:contentDescription="@string/exo_controls_play_description"
            android:src="@drawable/exo_ic_play_circle_filled"
            app:layout_constraintBottom_toBottomOf="@+id/exo_pause"
            app:layout_constraintEnd_toEndOf="@+id/exo_pause"
            app:layout_constraintStart_toStartOf="@+id/exo_pause"
            app:layout_constraintTop_toTopOf="@+id/exo_pause"
            app:tint="@color/white">

        </ImageView>

        <ImageView
            android:id="@+id/exo_pause"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:contentDescription="@string/paused"
            android:src="@drawable/exo_ic_pause_circle_filled"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white">

        </ImageView>

        <ImageView
            android:id="@+id/fwd"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="72dp"
            android:contentDescription="@string/exo_controls_fastforward_description"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_forward_10_24"
            app:layout_constraintBottom_toBottomOf="@+id/exo_play"
            app:layout_constraintStart_toEndOf="@+id/exo_play"
            app:layout_constraintTop_toTopOf="@+id/exo_play"
            app:layout_constraintVertical_bias="0.466"
            app:tint="@color/white">

        </ImageView>

        <TextView

            android:id="@+id/exo_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_0_0"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/exo_position"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/exo_position">

        </TextView>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="@string/front_slash"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/exo_duration"
            app:layout_constraintStart_toEndOf="@+id/exo_position"
            app:layout_constraintTop_toTopOf="@+id/exo_duration">

        </TextView>

        <TextView
            android:id="@+id/exo_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginBottom="35dp"
            android:text="@string/_00"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </TextView>


        <ImageView
            android:id="@+id/rew"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="72dp"
            android:contentDescription="@string/exo_controls_rewind_description"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_replay_10_24"
            app:layout_constraintBottom_toBottomOf="@+id/exo_play"
            app:layout_constraintEnd_toStartOf="@+id/exo_play"
            app:layout_constraintTop_toTopOf="@+id/exo_play"
            app:tint="@color/white">

        </ImageView>

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/exo_progress_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </com.google.android.material.progressindicator.LinearProgressIndicator>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/lock"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/ripple_circle"
        android:scaleType="centerInside"
        android:src="@drawable/ic_unlock"
        android:visibility="visible"
        android:contentDescription="@string/lock" />


</RelativeLayout>