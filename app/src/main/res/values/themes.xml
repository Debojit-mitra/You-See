<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.YouSee" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.YouSee" parent="Base.Theme.YouSee" />




    <style name="Theme.OtakuSenpai.SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/main_color</item>
        <item name="android:statusBarColor">@color/mode_inverse</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/mode_inverse</item>
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/mode_inverse</item>
    </style>

    <style name="Theme.OtakuSenpai.MainActivity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/main_color</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/mode_inverse</item>
        <item name="android:windowLightNavigationBar" >true</item>
    </style>

    <style name="Theme.OtakuSenpai.ShowActivity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/main_color</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/nav_bg</item>
        <item name="android:windowLightNavigationBar" >true</item>
    </style>

    <style name="Theme.OtakuSenpai.GenresActivity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/main_color</item>
        <item name="android:statusBarColor">@color/mode_inverse_extra</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/mode_inverse</item>
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/mode_inverse</item>
    </style>

    <style name="Theme.AppCompat.Translucent" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/main_color</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/dim_bacground</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor">@color/dim_bacground</item>
        <item name="android:navigationBarColor">@color/dim_bacground</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="RoundedCornersDialog" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="dialogCornerRadius">15dp</item>
        <item name="android:windowEnterAnimation">@anim/fadein</item>
        <item name="android:windowExitAnimation">@anim/fadeout</item>
        <!--<item name="android:textColor">@color/black</item>-->
    </style>

    <!--bottom sheet dialog-->
    <style name="BottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">15dp</item>
        <item name="cornerSizeTopLeft">15dp</item>
    </style>
    <style name="BottomSheetTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">15dp</item>
        <item name="cornerSizeTopLeft">15dp</item>
    </style>

    <style name="CustomSwitchTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorControlActivated">@color/main_color</item>
        <item name="colorSurface">@color/mode_light_blue</item>
    </style>





    <!-- player -->
    <style name="TrackSelectionDialogThemeOverlay" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="windowNoTitle">false</item>
    </style>

    <style name="RoundedCornersDialogPlayer" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="dialogCornerRadius">15dp</item>
        <!--<item name="android:textColor">@color/black</item>-->
    </style>
    <!-- player -->

</resources>